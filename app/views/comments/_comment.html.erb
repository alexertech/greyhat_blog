<div class="comment mb-4 border-start border-4 border-primary ps-3">
  <div class="d-flex">
    <div class="comment-avatar me-3">
      <div class="rounded-circle bg-light d-flex align-items-center justify-content-center" style="width: 50px; height: 50px; color: #6c757d; font-size: 1.2rem; font-weight: bold;">
        <%= comment.username.first.upcase %>
      </div>
    </div>
    <div class="comment-content flex-grow-1">
      <div class="comment-header d-flex justify-content-between align-items-center mb-2">
        <div class="comment-author fw-bold text-primary"><%= comment.username %></div>
        <div class="comment-date text-muted small">hace <%= time_ago_in_words(comment.created_at) %></div>
      </div>
      <div class="comment-body bg-light p-3 rounded">
        <%= simple_format(comment.body) %>
      </div>
    </div>
  </div>
</div> 