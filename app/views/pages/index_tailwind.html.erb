<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Hero Section -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-6 overflow-hidden">
    <div class="relative">
      <%= image_tag "hero_new_welcome.jpg", class: "w-full h-auto object-cover", loading: "lazy" %>
    </div>
  </div>

  <!-- Latest Articles Section -->
  <div class="mb-6">
    <div class="flex flex-col lg:flex-row lg:justify-between lg:items-center gap-4 mb-6">
      <div class="flex-1">
        <h2 class="text-2xl font-bold text-primary-600 flex items-center gap-3 mb-2">
          <i class="fas fa-newspaper"></i>Últimos Artículos
        </h2>
        <p class="text-gray-600 text-base">Descubre las últimas reflexiones y guías técnicas</p>
      </div>
      <div class="flex-shrink-0">
        <a href="/articulos" class="inline-flex items-center px-4 py-2 border border-primary-300 text-primary-700 bg-white hover:bg-primary-50 font-medium rounded-md text-sm transition-colors duration-200">
          <i class="fas fa-arrow-right mr-2"></i>Últimos Artículos
        </a>
      </div>
    </div>
  </div>

  <!-- Posts Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
    <% Post.published.includes(:image_attachment, :tags, :comments).order("created_at DESC").limit(6).each do |post| %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow duration-200">
        <% if post.image.attached? %>
          <%= image_tag post.image.variant(:thumb), class: "w-full h-48 object-cover", loading: "lazy", alt: post.title %>
        <% else %>
          <div class="w-full h-48 bg-gray-100 flex items-center justify-center">
            <i class="fas fa-image text-3xl text-gray-400"></i>
          </div>
        <% end %>
        
        <div class="p-4">
          <h3 class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2">
            <%= link_to post.title, post, class: "hover:text-primary-600 transition-colors duration-200" %>
          </h3>
          
          <% if post.body.present? %>
            <div class="text-gray-600 text-sm mb-3 line-clamp-3">
              <%= truncate(strip_tags(post.body.to_s), length: 120) %>
            </div>
          <% end %>
          
          <div class="space-y-3">
            <div class="flex items-center justify-between text-sm text-gray-500">
              <div class="flex items-center">
                <i class="fas fa-calendar-alt mr-1"></i>
                <%= time_ago_in_words(post.created_at) %> ago
              </div>
              
              <div class="flex items-center space-x-3">
                <div class="flex items-center">
                  <i class="fas fa-eye mr-1"></i>
                  <%= post.total_visits rescue 0 %>
                </div>
                <div class="flex items-center">
                  <i class="fas fa-comments mr-1"></i>
                  <%= post.comments.approved.count %>
                </div>
              </div>
            </div>
            
            <% if post.tags.any? %>
              <div class="flex flex-wrap gap-1">
                <% post.tags.limit(3).each do |tag| %>
                  <%= link_to tag.name, search_path(tag: tag.name), class: "inline-block px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded hover:bg-gray-200 transition-colors duration-200" %>
                <% end %>
                <% if post.tags.count > 3 %>
                  <span class="inline-block px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded">+<%= post.tags.count - 3 %></span>
                <% end %>
              </div>
            <% end %>
            
            <div class="pt-2">
              <%= link_to post, class: "w-full inline-flex items-center justify-center px-4 py-2 border border-primary-300 text-primary-700 bg-white hover:bg-primary-50 font-medium rounded-md text-sm transition-colors duration-200" do %>
                <i class="fas fa-arrow-right mr-2"></i>Leer Artículo
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Call to Action -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center">
    <h3 class="text-xl font-bold text-gray-900 mb-3">Explora Todos Nuestros Artículos</h3>
    <p class="text-gray-600 mb-6 max-w-2xl mx-auto">Encuentra más reflexiones, guías técnicas y perspectivas sobre tecnología</p>
    <a href="/articulos" class="inline-flex items-center px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-md text-base transition-colors duration-200">
      <i class="fas fa-newspaper mr-2"></i>Ver Todos los Artículos
    </a>
  </div>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>