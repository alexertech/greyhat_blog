<section class="wrapper style1">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-sm mb-4">
          <div class="card-header bg-dark text-white text-center py-3">
            <h2 class="mb-0 fs-4">Secure Login</h2>
          </div>
          <div class="card-body p-4">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
              <% if resource.errors.any? %>
                <div class="alert alert-danger" role="alert">
                  <h6><i class="fas fa-exclamation-triangle me-2"></i>Please fix the following errors:</h6>
                  <ul class="mb-0">
                    <% resource.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              <div class="form-group mb-3">
                <%= f.label :email, class: "form-label" %>
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
                </div>
              </div>

              <div class="form-group mb-3">
                <%= f.label :password, class: "form-label" %>
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-lock"></i></span>
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter your password" %>
                </div>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="form-check mb-3">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, class: "form-check-label" %>
                </div>
              <% end %>

              <div class="d-grid gap-2">
                <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

