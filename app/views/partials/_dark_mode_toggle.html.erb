<%#
  Dark mode toggle component

  Usage:
    render 'partials/dark_mode_toggle'
    render 'partials/dark_mode_toggle', mobile: true
%>

<% is_mobile = local_assigns[:mobile] %>

<div data-controller="dark-mode">
  <button data-dark-mode-target="toggle"
          data-action="click->dark-mode#toggle"
          class="theme-toggle <%= is_mobile ? 'theme-toggle--mobile' : '' %>"
          aria-label="Toggle dark mode">
    <div class="theme-toggle__slider">
      <i data-dark-mode-target="icon" class="fas fa-sun theme-toggle__icon"></i>
    </div>
  </button>
</div>
