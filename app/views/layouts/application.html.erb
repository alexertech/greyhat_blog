	<meta http-equiv="x-ua-compatible" content="ie=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<%= csrf_meta_tags %>
	<%= csp_meta_tag %>
	<% if content_for?(:head) %>
		<%= yield(:head) %>
	<% else %>
		<title>Greyhat - Explorando el Equilibrio entre la Tecnolog√≠a y la Vida</title>
	<% end %>
