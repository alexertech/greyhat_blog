<div>
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Estadísticas detalladas</h2>
    <div>
      <%= link_to "Dashboard", dashboard_path, class: "btn btn-outline-primary btn-sm" %>
    </div>
  </div>

  <!-- Performance Insights Section -->
  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card shadow-sm performance-insights-card">
        <div class="card-header bg-warning text-dark">
          <h5 class="mb-0"><i class="fas fa-lightbulb me-2"></i>Insights de Rendimiento</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <% @insights.each_with_index do |insight, index| %>
              <div class="col-md-<%= @insights.size == 1 ? '12' : @insights.size == 2 ? '6' : '4' %>">
                <div class="alert alert-info mb-2">
                  <i class="fas fa-info-circle me-2"></i><%= insight %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Visitas diarias</h5>
          <div class="btn-group" role="group">
            <%= link_to "Hoy", dashboards_stats_path(period: 1), class: "btn btn-sm #{@period == 1 ? 'btn-light' : 'btn-outline-light'}" %>
            <%= link_to "7 días", dashboards_stats_path(period: 7), class: "btn btn-sm #{@period == 7 ? 'btn-light' : 'btn-outline-light'}" %>
            <%= link_to "30 días", dashboards_stats_path(period: 30), class: "btn btn-sm #{@period == 30 ? 'btn-light' : 'btn-outline-light'}" %>
            <%= link_to "90 días", dashboards_stats_path(period: 90), class: "btn btn-sm #{@period == 90 ? 'btn-light' : 'btn-outline-light'}" %>
          </div>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead class="table-dark">
                <tr>
                  <th>Fecha</th>
                  <th>Visitas</th>
                </tr>
              </thead>
              <tbody>
                <% @daily_visits.each do |date, count| %>
                <tr>
                  <td><%= date %></td>
                  <td><span class="badge bg-primary"><%= count %></span></td>
                </tr>
                <% end %>
                <% if @daily_visits.empty? %>
                <tr>
                  <td colspan="2" class="text-center">No hay datos disponibles</td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Live Activity and Performance Analytics Row -->
  <div class="row mb-4">
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0"><i class="fas fa-pulse me-2"></i>Actividad Reciente</h5>
        </div>
        <div class="card-body">
          <div class="list-group list-group-flush" style="max-height: 300px; overflow-y: auto;">
            <% @recent_visits.each do |visit| %>
              <div class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                  <div class="fw-bold">
                    <%= visit.visitable_type %>: <%= visit.visitable.try(:title) || visit.visitable.try(:name) || 'Sin título' %>
                  </div>
                  <small class="text-muted">
                    <i class="fas fa-clock me-1"></i><%= time_ago_in_words(visit.viewed_at) %> ago
                    <% if visit.referer.present? %>
                      | <i class="fas fa-external-link-alt me-1"></i><%= URI.parse(visit.referer).host&.downcase&.gsub(/^www\./, '') rescue 'Unknown' %>
                    <% end %>
                  </small>
                </div>
                <span class="badge bg-<%= visit.bot? ? 'warning' : 'primary' %> rounded-pill">
                  <%= visit.bot? ? 'Bot' : 'Human' %>
                </span>
              </div>
            <% end %>
            <% if @recent_visits.empty? %>
              <div class="list-group-item text-center text-muted">
                No hay actividad reciente
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
          <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Métricas de Rendimiento</h5>
        </div>
        <div class="card-body">
          <div class="row text-center">
            <div class="col-12 mb-3">
              <h6 class="text-muted mb-1">Tasa de Rebote</h6>
              <h3 class="text-<%= @bounce_rate > 70 ? 'danger' : @bounce_rate > 50 ? 'warning' : 'success' %>">
                <%= @bounce_rate %>%
              </h3>
            </div>
            <div class="col-12 mb-3">
              <h6 class="text-muted mb-1">Duración Promedio</h6>
              <h3 class="text-primary">
                <%= @avg_session_duration > 60 ? "#{(@avg_session_duration / 60).round(1)}m" : "#{@avg_session_duration}s" %>
              </h3>
            </div>
          </div>
          
          <h6 class="text-muted mb-2">Embudo de Conversión</h6>
          <% @conversion_funnel.each do |stage, value| %>
            <div class="d-flex justify-content-between align-items-center mb-1">
              <small><%= stage %></small>
              <span class="badge bg-secondary"><%= value %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
          <h5 class="mb-0">Visitas por hora (últimas 24 horas)</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead class="table-dark">
                <tr>
                  <th>Hora</th>
                  <th>Visitas</th>
                </tr>
              </thead>
              <tbody>
                <% @hourly_visits.each do |hour, count| %>
                <tr>
                  <td><%= hour.to_i %>:00 - <%= hour.to_i + 1 %>:00</td>
                  <td><span class="badge bg-success"><%= count %></span></td>
                </tr>
                <% end %>
                <% if @hourly_visits.empty? %>
                <tr>
                  <td colspan="2" class="text-center">No hay datos disponibles</td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

  </div>

  <!-- Top Exit Pages Section -->
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
          <h5 class="mb-0"><i class="fas fa-sign-out-alt me-2"></i>Páginas de Salida</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped table-hover table-sm">
              <thead class="table-dark">
                <tr>
                  <th>Página</th>
                  <th>Salidas</th>
                </tr>
              </thead>
              <tbody>
                <% @top_exit_pages.each do |page, count| %>
                <tr>
                  <td><%= page.truncate(40) %></td>
                  <td><span class="badge bg-warning text-dark"><%= count %></span></td>
                </tr>
                <% end %>
                <% if @top_exit_pages.empty? %>
                <tr>
                  <td colspan="2" class="text-center">No hay datos suficientes</td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
          <h5 class="mb-0">Principales referidos</h5>
        </div>
        <div class="card-body">
          <!-- Traffic Source Summary -->
          <div class="row mb-3">
            <div class="col-6">
              <div class="text-center">
                <h6 class="text-muted mb-1">Redes Sociales</h6>
                <span class="badge bg-primary fs-6"><%= @social_media_visits %></span>
              </div>
            </div>
            <div class="col-6">
              <div class="text-center">
                <h6 class="text-muted mb-1">Buscadores</h6>
                <span class="badge bg-success fs-6"><%= @search_engine_visits %></span>
              </div>
            </div>
          </div>
          
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead class="table-dark">
                <tr>
                  <th>Origen</th>
                  <th>Tipo</th>
                  <th>Visitas</th>
                </tr>
              </thead>
              <tbody>
                <% @top_referrers.each do |referrer| %>
                <tr>
                  <td>
                    <div class="d-flex align-items-center">
                      <% case referrer[:source_type] %>
                      <% when :social %>
                        <i class="fab fa-<%= referrer[:domain].include?('linkedin') ? 'linkedin' : referrer[:domain].include?('twitter') || referrer[:domain].include?('x.com') ? 'twitter' : referrer[:domain].include?('facebook') ? 'facebook' : 'share-alt' %> me-2 text-primary"></i>
                      <% when :newsletter %>
                        <i class="fas fa-newspaper me-2 text-warning"></i>
                      <% when :search %>
                        <i class="fas fa-search me-2 text-success"></i>
                      <% when :tech_community %>
                        <i class="fas fa-code me-2 text-info"></i>
                      <% when :blog_platform %>
                        <i class="fas fa-blog me-2 text-secondary"></i>
                      <% else %>
                        <i class="fas fa-globe me-2 text-muted"></i>
                      <% end %>
                      <small><%= referrer[:display_name] %></small>
                    </div>
                  </td>
                  <td>
                    <% case referrer[:source_type] %>
                    <% when :social %>
                      <span class="badge bg-primary">Social</span>
                    <% when :newsletter %>
                      <span class="badge bg-warning">Newsletter</span>
                    <% when :search %>
                      <span class="badge bg-success">Búsqueda</span>
                    <% when :tech_community %>
                      <span class="badge bg-info">Tech</span>
                    <% when :blog_platform %>
                      <span class="badge bg-secondary">Blog</span>
                    <% else %>
                      <span class="badge bg-light text-dark">Otro</span>
                    <% end %>
                  </td>
                  <td><span class="badge bg-info"><%= referrer[:count] %></span></td>
                </tr>
                <% end %>
                <% if @top_referrers.empty? %>
                <tr>
                  <td colspan="3" class="text-center">No hay datos disponibles</td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
          <h5 class="mb-0">Visitas por tipo de contenido</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead class="table-dark">
                <tr>
                  <th>Tipo</th>
                  <th>Total</th>
                  <th>Último día</th>
                  <th>Última semana</th>
                  <th>Último mes</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Páginas</td>
                  <td><span class="badge bg-primary"><%= Visit.where(visitable_type: 'Page').count %></span></td>
                  <td><span class="badge bg-secondary"><%= Visit.where(visitable_type: 'Page').where('viewed_at >= ?', 1.day.ago).count %></span></td>
                  <td><span class="badge bg-secondary"><%= Visit.where(visitable_type: 'Page').where('viewed_at >= ?', 1.week.ago).count %></span></td>
                  <td><span class="badge bg-secondary"><%= Visit.where(visitable_type: 'Page').where('viewed_at >= ?', 1.month.ago).count %></span></td>
                </tr>
                <tr>
                  <td>Artículos</td>
                  <td><span class="badge bg-primary"><%= Visit.where(visitable_type: 'Post').count %></span></td>
                  <td><span class="badge bg-secondary"><%= Visit.where(visitable_type: 'Post').where('viewed_at >= ?', 1.day.ago).count %></span></td>
                  <td><span class="badge bg-secondary"><%= Visit.where(visitable_type: 'Post').where('viewed_at >= ?', 1.week.ago).count %></span></td>
                  <td><span class="badge bg-secondary"><%= Visit.where(visitable_type: 'Post').where('viewed_at >= ?', 1.month.ago).count %></span></td>
                </tr>
                <tr>
                  <td><strong>Total</strong></td>
                  <td><span class="badge bg-success"><%= Visit.count %></span></td>
                  <td><span class="badge bg-secondary"><%= Visit.where('viewed_at >= ?', 1.day.ago).count %></span></td>
                  <td><span class="badge bg-secondary"><%= Visit.where('viewed_at >= ?', 1.week.ago).count %></span></td>
                  <td><span class="badge bg-secondary"><%= Visit.where('viewed_at >= ?', 1.month.ago).count %></span></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
          <h5 class="mb-0">Visitas por tipo de visitante</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead class="table-dark">
                <tr>
                  <th>Tipo</th>
                  <th>Total</th>
                  <th>Último día</th>
                  <th>Última semana</th>
                  <th>Último mes</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Humanos</td>
                  <td><span class="badge bg-primary"><%= Visit.humans.count %></span></td>
                  <td><span class="badge bg-secondary"><%= Visit.humans.where('viewed_at >= ?', 1.day.ago).count %></span></td>
                  <td><span class="badge bg-secondary"><%= Visit.humans.where('viewed_at >= ?', 1.week.ago).count %></span></td>
                  <td><span class="badge bg-secondary"><%= Visit.humans.where('viewed_at >= ?', 1.month.ago).count %></span></td>
                </tr>
                <tr>
                  <td>Bots</td>
                  <td><span class="badge bg-warning"><%= Visit.bots.count %></span></td>
                  <td><span class="badge bg-secondary"><%= Visit.bots.where('viewed_at >= ?', 1.day.ago).count %></span></td>
                  <td><span class="badge bg-secondary"><%= Visit.bots.where('viewed_at >= ?', 1.week.ago).count %></span></td>
                  <td><span class="badge bg-secondary"><%= Visit.bots.where('viewed_at >= ?', 1.month.ago).count %></span></td>
                </tr>
                <tr>
                  <td><strong>Porcentaje Bots</strong></td>
                  <td><span class="badge bg-danger"><%= Visit.count > 0 ? "#{(Visit.bots.count.to_f / Visit.count * 100).round(1)}%" : "0%" %></span></td>
                  <td><span class="badge bg-secondary"><%= Visit.where('viewed_at >= ?', 1.day.ago).count > 0 ? "#{(Visit.bots.where('viewed_at >= ?', 1.day.ago).count.to_f / Visit.where('viewed_at >= ?', 1.day.ago).count * 100).round(1)}%" : "0%" %></span></td>
                  <td><span class="badge bg-secondary"><%= Visit.where('viewed_at >= ?', 1.week.ago).count > 0 ? "#{(Visit.bots.where('viewed_at >= ?', 1.week.ago).count.to_f / Visit.where('viewed_at >= ?', 1.week.ago).count * 100).round(1)}%" : "0%" %></span></td>
                  <td><span class="badge bg-secondary"><%= Visit.where('viewed_at >= ?', 1.month.ago).count > 0 ? "#{(Visit.bots.where('viewed_at >= ?', 1.month.ago).count.to_f / Visit.where('viewed_at >= ?', 1.month.ago).count * 100).round(1)}%" : "0%" %></span></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
