<div>
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Dashboard</h2>
    <%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger btn-sm" %>
  </div>

  <% if notice %>
    <div class="alert alert-success" id="notice"><%= notice %></div>
  <% end %>

  <div class="row mb-4">
    <div class="col-md-4">
      <div class="card shadow-sm mb-3">
        <div class="card-body text-center">
          <h5 class="card-title">Contactos</h5>
          <p class="card-text display-6"><%= Contact.count %></p>
          <%= link_to "Administrar contactos", contacts_url, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm mb-3">
        <div class="card-body text-center">
          <h5 class="card-title">Artículos</h5>
          <p class="card-text display-6"><%= Post.count %></p>
          <%= link_to "Administrar artículos", posts_url, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card shadow-sm mb-3">
        <div class="card-body text-center">
          <h5 class="card-title">Visitas totales</h5>
          <p class="card-text display-6"><%= Page.sum(:unique_visits) + Post.total_unique_visits %></p>
          <button class="btn btn-primary" disabled>Ver estadísticas</button>
        </div>
      </div>
    </div>
  </div>

  <h3 class="mb-3">Estadísticas de página</h3>
  <div class="card shadow-sm">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>Página</th>
              <th>Visitas únicas</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Inicio</td>
              <td><span class="badge bg-primary"><%= Page.find(1).unique_visits %></span></td>
            </tr>
            <tr>
              <td>Acerca</td>
              <td><span class="badge bg-primary"><%= Page.find(2).unique_visits %></span></td>
            </tr>
            <tr>
              <td>Servicios</td>
              <td><span class="badge bg-primary"><%= @statServ %></span></td>
            </tr>
            <tr>
              <td>Artículos (total)</td>
              <td><span class="badge bg-success"><%= Post.total_unique_visits %></span></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>