<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Header Section -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
    <div class="flex flex-col lg:flex-row lg:justify-between lg:items-center gap-4">
      <div class="flex-1">
        <h1 class="text-2xl font-bold text-primary-600 flex items-center gap-3 mb-2">
          <i class="fas fa-newspaper"></i>Artículos
        </h1>
        <p class="text-gray-600 text-base">Gestiona y visualiza todos tus artículos publicados</p>
      </div>
      <div class="flex flex-wrap gap-2">
        <%= link_to dashboard_path, class: "inline-flex items-center px-4 py-2 border border-primary-300 text-primary-700 bg-white hover:bg-primary-50 font-medium rounded-md text-sm transition-colors duration-200" do %>
          <i class="fas fa-tachometer-alt mr-2"></i>Dashboard
        <% end %>
        <%= link_to new_post_path, class: "inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-md text-sm transition-colors duration-200" do %>
          <i class="fas fa-plus mr-2"></i>Nuevo Artículo
        <% end %>
      </div>
    </div>
  </div>

  <!-- View Toggle -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-6">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
      <div class="inline-flex rounded-md shadow-sm" role="group">
        <button type="button" class="px-4 py-2 text-sm font-medium text-primary-700 bg-primary-50 border border-primary-300 rounded-l-md hover:bg-primary-100 focus:z-10 focus:ring-2 focus:ring-primary-500 focus:text-primary-900 transition-colors duration-200 view-toggle-btn active" data-view="grid">
          <i class="fas fa-th-large mr-2"></i>Tarjetas
        </button>
        <button type="button" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 border-l-0 rounded-r-md hover:bg-gray-50 focus:z-10 focus:ring-2 focus:ring-primary-500 focus:text-primary-900 transition-colors duration-200 view-toggle-btn" data-view="list">
          <i class="fas fa-list mr-2"></i>Lista
        </button>
      </div>
      <div class="flex items-center">
        <span class="inline-flex items-center px-3 py-2 rounded-full text-sm font-medium bg-primary-50 text-primary-700">
          <i class="fas fa-newspaper mr-2"></i>
          <%= @posts.count %> artículos
        </span>
      </div>
    </div>
  </div>

  <!-- Posts Grid View -->
  <div class="posts-view" data-view="grid">
    <% if @posts.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @posts.each do |post| %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow duration-200">
            <% if post.image.attached? %>
              <%= image_tag post.image.variant(:thumb), class: "w-full h-48 object-cover", loading: "lazy", alt: post.title %>
            <% else %>
              <div class="w-full h-48 bg-gray-100 flex items-center justify-content-center">
                <i class="fas fa-image text-3xl text-gray-400"></i>
              </div>
            <% end %>
            
            <div class="p-4">
              <h3 class="text-lg font-semibold text-gray-900 mb-2 line-clamp-2">
                <%= link_to post.title, post, class: "hover:text-primary-600 transition-colors duration-200" %>
              </h3>
              
              <% if post.body.present? %>
                <div class="text-gray-600 text-sm mb-3 line-clamp-3">
                  <%= truncate(strip_tags(post.body.to_s), length: 120) %>
                </div>
              <% end %>
              
              <div class="space-y-3">
                <div class="flex items-center justify-between text-sm text-gray-500">
                  <div class="flex items-center">
                    <i class="fas fa-calendar-alt mr-1"></i>
                    <%= time_ago_in_words(post.created_at) %> ago
                  </div>
                  
                  <div class="flex items-center space-x-3">
                    <div class="flex items-center">
                      <i class="fas fa-eye mr-1"></i>
                      <%= post.total_visits %>
                    </div>
                    <div class="flex items-center">
                      <i class="fas fa-comments mr-1"></i>
                      <%= post.comments.approved.count %>
                    </div>
                  </div>
                </div>
                
                <div class="flex items-center justify-between">
                  <% if post.draft? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Borrador</span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Publicado</span>
                  <% end %>
                </div>
                
                <% if post.tags.any? %>
                  <div class="flex flex-wrap gap-1">
                    <% post.tags.limit(3).each do |tag| %>
                      <span class="inline-block px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"><%= tag.name %></span>
                    <% end %>
                    <% if post.tags.count > 3 %>
                      <span class="inline-block px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded">+<%= post.tags.count - 3 %></span>
                    <% end %>
                  </div>
                <% end %>
                
                <div class="grid grid-cols-3 gap-2 pt-2">
                  <%= link_to post, class: "inline-flex items-center justify-center px-3 py-2 border border-primary-300 text-primary-700 bg-white hover:bg-primary-50 text-xs font-medium rounded transition-colors duration-200" do %>
                    <i class="fas fa-eye mr-1"></i>Ver
                  <% end %>
                  <%= link_to edit_post_path(post), class: "inline-flex items-center justify-center px-3 py-2 border border-gray-300 text-gray-700 bg-white hover:bg-gray-50 text-xs font-medium rounded transition-colors duration-200" do %>
                    <i class="fas fa-edit mr-1"></i>Editar
                  <% end %>
                  <%= button_to post, method: :delete, 
                      form: { data: { turbo_confirm: '¿Está seguro de eliminar este artículo?' } }, 
                      class: "inline-flex items-center justify-center px-3 py-2 border border-red-300 text-red-700 bg-white hover:bg-red-50 text-xs font-medium rounded transition-colors duration-200", 
                      form_class: "flex-1" do %>
                    <i class="fas fa-trash mr-1"></i>Eliminar
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
        <i class="fas fa-newspaper text-6xl text-gray-400 mb-4"></i>
        <h4 class="text-xl font-medium text-gray-900 mb-2">No hay artículos para mostrar</h4>
        <p class="text-gray-600 mb-6">Comienza creando tu primer artículo para compartir tu conocimiento</p>
        <%= link_to new_post_path, class: "inline-flex items-center px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-md text-base transition-colors duration-200" do %>
          <i class="fas fa-plus mr-2"></i>Crear Primer Artículo
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Posts List View -->
  <div class="posts-view hidden" data-view="list">
    <% if @posts.any? %>
      <div class="space-y-4">
        <% @posts.each do |post| %>
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow duration-200">
            <div class="flex flex-col lg:flex-row lg:justify-between lg:items-start gap-4">
              <div class="flex-1">
                <h4 class="text-lg font-semibold text-gray-900 mb-2">
                  <%= link_to post.title, post, class: "hover:text-primary-600 transition-colors duration-200" %>
                </h4>
                <div class="text-sm text-gray-500 mb-3">
                  <%= time_ago_in_words(post.created_at) %> ago
                </div>
                
                <% if post.body.present? %>
                  <div class="text-gray-600 text-sm mb-4">
                    <%= truncate(strip_tags(post.body.to_s), length: 200) %>
                  </div>
                <% end %>
                
                <div class="flex flex-wrap items-center gap-4">
                  <% if post.draft? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Borrador</span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Publicado</span>
                  <% end %>
                  
                  <div class="flex items-center space-x-4 text-sm text-gray-500">
                    <span class="flex items-center">
                      <i class="fas fa-eye mr-1"></i><%= post.total_visits %> visitas
                    </span>
                    <span class="flex items-center">
                      <i class="fas fa-comments mr-1"></i><%= post.comments.approved.count %> comentarios
                    </span>
                  </div>
                  
                  <% if post.tags.any? %>
                    <div class="flex flex-wrap gap-1">
                      <% post.tags.limit(2).each do |tag| %>
                        <span class="inline-block px-2 py-1 text-xs font-medium bg-gray-100 text-gray-700 rounded"><%= tag.name %></span>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
              
              <div class="flex items-center space-x-2 flex-shrink-0">
                <%= link_to post, class: "inline-flex items-center justify-center w-8 h-8 border border-primary-300 text-primary-700 bg-white hover:bg-primary-50 rounded transition-colors duration-200" do %>
                  <i class="fas fa-eye text-sm"></i>
                <% end %>
                <%= link_to edit_post_path(post), class: "inline-flex items-center justify-center w-8 h-8 border border-gray-300 text-gray-700 bg-white hover:bg-gray-50 rounded transition-colors duration-200" do %>
                  <i class="fas fa-edit text-sm"></i>
                <% end %>
                <%= button_to post, method: :delete, 
                    form: { data: { turbo_confirm: '¿Está seguro de eliminar este artículo?' } }, 
                    class: "inline-flex items-center justify-center w-8 h-8 border border-red-300 text-red-700 bg-white hover:bg-red-50 rounded transition-colors duration-200", 
                    form_class: "inline-block" do %>
                  <i class="fas fa-trash text-sm"></i>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <% if @posts.any? %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mt-6">
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4">
        <div class="text-sm text-gray-700">
          Mostrando <%= @posts.count %> de <%= @posts.total_entries rescue @posts.count %> artículos
        </div>
        <div class="flex justify-center sm:justify-end">
          <%= will_paginate @posts, class: 'flex space-x-1' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- View Toggle Stimulus Controller -->
<div data-controller="post-view-toggle"></div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>