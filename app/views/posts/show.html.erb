<% content_for :head do %>
  <title><%= @post.title %> - Greyhat</title>
  <meta name="description" content="<%= strip_tags(@post.body.to_plain_text).truncate(160) %>" />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="article" />
  <meta property="og:title" content="<%= @post.title %>" />
  <meta property="og:description" content="<%= strip_tags(@post.body.to_plain_text).truncate(200) %>" />
  <meta property="og:url" content="<%= request.original_url %>" />
  <meta property="og:site_name" content="Greyhat" />
  <% if @post.image.attached? %>
    <meta property="og:image" content="<%= request.base_url %><%= url_for(@post.image.variant(:banner)) %>" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/webp" />
  <% else %>
    <meta property="og:image" content="<%= request.base_url %><%= asset_path('logo.png') %>" />
    <meta property="og:image:width" content="500" />
    <meta property="og:image:height" content="500" />
    <meta property="og:image:type" content="image/png" />
  <% end %>
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="<%= @post.title %>" />
  <meta name="twitter:description" content="<%= strip_tags(@post.body.to_plain_text).truncate(200) %>" />
  <% if @post.image.attached? %>
    <meta name="twitter:image" content="<%= request.base_url %><%= url_for(@post.image.variant(:banner)) %>" />
  <% else %>
    <meta name="twitter:image" content="<%= request.base_url %><%= asset_path('logo.png') %>" />
  <% end %>
  
  <!-- LinkedIn -->
  <meta property="og:locale" content="es_ES" />
  <meta property="article:author" content="Greyhat" />
  <meta property="article:published_time" content="<%= @post.created_at.iso8601 %>" />
<% end %>

<% if notice %>
<div class="alert alert-success" id="notice"><%= notice %></div>
<% end %>

<div class="container py-4">
  <article class="blog-post">
    <% if user_signed_in? && @post.draft? %>
      <div class="alert alert-warning mb-4">
        <i class="fa fa-exclamation-triangle me-2"></i> Este artículo está en modo borrador y no es visible para el público.
      </div>
    <% end %>

    <% if user_signed_in? %>
      <div class="badge bg-info text-white mb-3">
        Unique visitors: <%= @post.unique_visits %> | Total visits: <%= @post.total_visits %> | Human visits: <%= @post.human_visits %>
      </div>
    <% end %>

    <% if @post.image.attached? %>
      <div id="image_post" class="mb-4">
        <%= image_tag @post.image.variant(:medium), class: "img-fluid rounded", loading: "lazy" %>
      </div>
    <% end %>

    <header class="blog-post-header mb-4">
      <h1 class="blog-post-title display-5 fw-bold"><%= @post.title %></h1>
      <div class="blog-post-meta text-muted mb-4">
        <time datetime="<%= @post.created_at.strftime('%Y-%m-%d') %>">
          <%= @post.created_at.strftime("%d %b. %Y") %>
        </time>
        <span class="mx-1">&middot;</span>
        <span>Lectura de <%= (@post.body.to_plain_text.split.size/200)+1 %> minutos</span>
        
        <% if user_signed_in? %>
          <span class="mx-1">&middot;</span>
          <span class="badge bg-info">Unique: <%= @post.unique_visits %></span>
          <span class="mx-1">&middot;</span>
          <span class="badge bg-secondary">Total: <%= @post.total_visits %></span>
        <% end %>
      </div>
      
      <!-- Tags -->
      <% if @post.tags.any? %>
        <div class="mb-4">
          <% @post.tags.each do |tag| %>
            <%= link_to search_path(tag: tag.name), class: "badge bg-primary text-decoration-none me-1 mb-1 px-2 py-1", style: "font-size: 0.75rem;" do %>
              <i class="fas fa-tag me-1"></i><%= tag.name %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </header>


    <!-- Bookmark and Share Actions -->
    <div class="d-flex justify-content-between align-items-center mb-4 p-3 bg-light rounded">
      <!-- Bookmark Button -->
      <div data-controller="bookmarks" 
           data-bookmarks-post-id-value="<%= @post.id %>"
           data-bookmarks-post-title-value="<%= @post.title %>"
           data-bookmarks-post-slug-value="<%= @post.slug %>">
        <button data-bookmarks-target="button" 
                data-action="click->bookmarks#toggle"
                class="btn btn-outline-secondary btn-sm">
          <i data-bookmarks-target="icon" class="far fa-bookmark text-muted"></i>
          <span data-bookmarks-target="text">Guardar</span>
        </button>
      </div>

      <!-- Share Buttons -->
      <div data-controller="share-buttons"
           data-share-buttons-url-value="<%= request.original_url %>"
           data-share-buttons-title-value="<%= @post.title %>"
           data-share-buttons-description-value="<%= strip_tags(@post.body.to_plain_text).truncate(160) %>">
        <div class="btn-group" role="group">
          <button data-action="click->share-buttons#shareTwitter" class="btn btn-outline-primary btn-sm">
            <i class="fab fa-twitter"></i>
          </button>
          <button data-action="click->share-buttons#shareLinkedIn" class="btn btn-outline-primary btn-sm">
            <i class="fab fa-linkedin"></i>
          </button>
          <button data-action="click->share-buttons#shareFacebook" class="btn btn-outline-primary btn-sm">
            <i class="fab fa-facebook"></i>
          </button>
          <button data-action="click->share-buttons#shareWhatsApp" class="btn btn-outline-success btn-sm">
            <i class="fab fa-whatsapp"></i>
          </button>
          <button data-action="click->share-buttons#copyLink" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-link"></i> Copiar
          </button>
        </div>
      </div>
    </div>

    <article class="mb-5">
      <%= @post.body %>
    </article>
    
    <!-- Newsletter Subscription -->
    <% # render 'partials/substack_subscription' %>
    
    <hr>

    <!-- Comments Section -->
    <section class="mt-5 mb-5">
      <div class="comments-container">
        <h3 class="mb-4 pb-2 border-bottom">
          <i class="fa-solid fa-comments"></i> 
          <span id="comment_count"><%= pluralize(@post.comments.approved.count, "comentario") %></span>
        </h3>
        
        <% if @post.comments.approved.any? %>
          <div id="comments" class="mb-5">
            <% @post.comments.approved.order(created_at: :desc).each do |comment| %>
              <%= render "comments/comment", comment: comment %>
            <% end %>
          </div>
        <% else %>
          <div class="alert alert-light text-center mb-5">
            <p class="mb-0">Aún no hay comentarios. ¡Sé el primero en comentar!</p>
          </div>
        <% end %>
        
        <%= render "comments/form", post: @post, comment: Comment.new %>
      </div>
    </section>

    <hr>

    <div class="row py-4">
      <div class="col-12">
        <h3 class="mb-3">Acerca del Autor</h3>
        <div class="d-flex align-items-start">
          <%= image_tag "0.jpg", class: "rounded me-3", style: "width:120px;" %>
          <div>
            <strong>
              <a href="https://www.alexertech.com/" target="_blank" class="text-decoration-none">
                Alex Barrios
              </a>
            </strong>
            <p class="small mt-2">
              Senior Software Engineer, consultor en ciberseguridad y escritor técnico.
              Con más de 20 años en tecnología, reflexiona sobre el impacto humano del software, la inteligencia artificial y la atención digital.
              Es fundador de Greyhat y comparte sus pensamientos desde la experiencia, la terminal y la introspección.
            </p>
          </div>
        </div>
      </div>
    </div>

    <hr>

    <h2 class="mb-4">También te puede interesar</h2>

    <div class="row">
      <% @related_posts.each do |post| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <% if post.image.attached? %>
              <%= image_tag post.image.variant(:thumb), class: "card-img-top", loading: "lazy" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to post.title, post, class: "text-decoration-none" %>
              </h5>
              
              <!-- Tags -->
              <% if post.tags.any? %>
                <div class="mb-2">
                  <% post.tags.limit(2).each do |tag| %>
                    <%= link_to search_path(tag: tag.name), class: "badge bg-outline-secondary text-decoration-none me-1 mb-1", style: "border: 1px solid #6c757d; color: #6c757d; font-size: 0.7rem;" do %>
                      <i class="fas fa-tag me-1"></i><%= tag.name %>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
              
              <p class="card-text small text-muted">
                <%= post.created_at.strftime("%d %b. %Y") %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </article>
</div>
