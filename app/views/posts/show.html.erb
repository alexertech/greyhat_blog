<p id="notice"><%= notice %></p>

<div class="medium-container">

  <article>
    <header>
      <h2><%= @post.title %></h2>
      <p><%= @post.created_at.strftime("%d %b. %Y") %> | <%= link_to "Volver", "/articulos"%></p>
    </header>

    <% if @post.image.attached? %>
    <div id="image_post"><%=image_tag url_for(@post.image), class:"image_post" %></div>
    <% end %>


    <div class="medium-container">
      <%= markdown(@post.body) %>
      <a href="https://twitter.com/intent/tweet?screen_name=greyhat_se&ref_src=twsrc%5Etfw" class="twitter-mention-button" data-size="large" data-lang="es" data-dnt="true" data-show-count="false">Tweet to @greyhat_se</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
    </div>
    <br>
    <hr>

    <h2>TambiÃ©n te puede interesar</h2>

     <% Post.order("RANDOM()").where.not(id: @post.id).all.take(3).each do |post| %>

      <div class="flex-row post_list">
        <div class="flex-small one-fourth image_list">
          <% if post.image.attached? %>
            <%=image_tag url_for(post.image)%>
          <% end %>
        </div>
        <div class="flex-small">
          <strong>
            <%= link_to post.title, post %>
          </strong>

          <div style="font-size:small">
            <em><%= post.created_at.strftime("%d %b. %Y") %></em>
          </div>

        </div>
        <div style="clear:both"></div>
      </div>

   <% end %>



  </article>

  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@greyhat_se">
  <meta name="twitter:creator" content="@greyhat_se">
  <meta name="twitter:title" content="<%= @post.title %>">
  <meta name="twitter:description" content="<%= @post.body.at(0..200) %>">
  <% if @post.image.attached? %>
  <meta name="twitter:image" content="https://greyhat.cl<%=url_for(@post.image)%>">
  <% end %>

</div>
