# =============================================================================
# Docker Environment Configuration
# =============================================================================

# Database
POSTGRES_DB=greyhat_development
POSTGRES_USER=greyhat
POSTGRES_PASSWORD=greyhat
POSTGRES_PORT=5432

# Rails
RAILS_ENV=development
RAILS_PORT=3000  # For local dev. In production, Caddy proxies to port 3000 internally
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_TO_STDOUT=true

# Production only (optional in development)
# RAILS_MASTER_KEY=
# SECRET_KEY_BASE=

# =============================================================================
# Production Example (with Caddy reverse proxy):
# =============================================================================
# RAILS_ENV=production
# POSTGRES_DB=greyhat_production
# POSTGRES_USER=greyhat
# POSTGRES_PASSWORD=secure_production_password
# RAILS_MASTER_KEY=your_master_key
# SECRET_KEY_BASE=your_secret_key_base
# RAILS_PORT=3000  # Not exposed externally - Caddy proxies from 80/443 to greyhat_web:3000